<?xml version="1.0" encoding="UTF-8"?>
<form>
<fields name="params">
		<fieldset
			name="boxart"
			addrulepath="/administrator/components/com_games/models/rules">

				<field
					name="width"
					type="text"
					label="COM_GAMES_CATEGORY_FIELD_WIDTH_LABEL"
					description="COM_GAMES_CATEGORY_FIELD_WIDTH_DESC"
					validate="positive" />

				<field
					name="height"
					type="text"
					label="COM_GAMES_CATEGORY_FIELD_HEIGHT_LABEL"
					description="COM_GAMES_CATEGORY_FIELD_HEIGHT_DESC"
					validate="positive" />

				<field
					name="default_boxart"
					type="media"
					label="COM_GAMES_CATEGORY_FIELD_DEFAULT_BOXART_LABEL"
					description="COM_GAMES_CATEGORY_FIELD_DEFAULT_BOXART_DESC"
					default="images/games/boxarts/noboxshot.gif"
					required="true" />
		</fieldset>
		<fieldset
			name="achievements"
			addrulepath="/administrator/components/com_games/models/rules">

				<field
					name="achievements_type"
					type="list"
					label="COM_GAMES_CATEGORY_FIELD_ACHIEVEMENTS_TYPE_LABEL"
					description="COM_GAMES_CATEGORY_FIELD_ACHIEVEMENTS_TYPE_DESC"
					required="true"
					default="0">
					<option value="0">JNONE</option>
					<option value="steam">COM_GAMES_CATEGORY_OPTION_STEAM</option>
					<!--<option value="live">COM_GAMES_CATEGORY_OPTION_LIVE</option>
					<option value="psn">COM_GAMES_CATEGORY_OPTION_PSN</option>-->
				</field>
		</fieldset>
	</fields>
</form>
